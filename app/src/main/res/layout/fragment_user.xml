<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_user_info"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_info_background">
        <shangchuan.com.oec.widget.CircleImageView
            android:id="@+id/user_avater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_img_avatar"
            app:border_width="2dp"
            app:border_color="@color/circle_imageview_border_color"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_below="@+id/user_avater"
            android:layout_marginTop="10dp"
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lines="1"
            android:textColor="@color/user_phone_number_bg_color"
            android:layout_centerHorizontal="true"
            android:text="灌篮高手"/>



        <TextView
            android:text="18888834888"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/user_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:ellipsize="middle"
            android:textColor="@color/theme_color"
            android:background="@drawable/shape_user_phone_number_background"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_switch_organize"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/img_or_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_tenant_change"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/user_switch_organization"
            android:textSize="16sp"

            />
        <ImageView
            android:id="@+id/img_user_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/home_news_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="100dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/img_user_right_arrow"
            android:text="上海商传互联网科技有限公司"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:id="@+id/current_tenant_name"
            android:textColor="@color/navigation_divide_color"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/user_divide_color"
        />
    <RelativeLayout
        android:id="@+id/rel_organize_info"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/img_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_tenant_info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/user_organize_info"
            android:textSize="16sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/home_news_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/user_divide_color"/>
    <RelativeLayout
        android:id="@+id/rel_modify_password"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/img_pwd_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_pwd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/user_modify_password"
            android:textSize="16sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/home_news_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/user_divide_color"/>
    <RelativeLayout
        android:id="@+id/rel_about"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/img_about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_about"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/user_about"
            android:textSize="16sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/home_news_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/user_divide_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/tv_logoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_drop_out"
            android:textSize="17sp"
            android:textColor="@color/navigation_divide_color"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/user_divide_color"/>
</LinearLayout>