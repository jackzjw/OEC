<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_organize_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shangchuan.com.oec.ui.user.activity.ModifyOrganizeInfoActivity">
    <include layout="@layout/toolbar_layout"/>


           <View
               android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="@color/theme_divide_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/user_avater"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_news_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <shangchuan.com.oec.widget.CircleImageView
            android:id="@+id/user_avater"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/theme_divide_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/team_user_nick"
                    android:id="@+id/string_full_name"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:layout_toRightOf="@+id/string_full_name"
                    android:id="@+id/user_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="刀疤"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/user_name"
                    android:layout_centerVertical="true"
                    android:id="@+id/string_organize_simple_name"
                    />
                <EditText
                    android:layout_toRightOf="@+id/string_organize_simple_name"
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:text="商传"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/team_user_gender"
                    android:layout_centerVertical="true"
                    android:id="@+id/string_code"
                    />
                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="男"

                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_contacts_job"
                    android:layout_centerVertical="true"
                    android:id="@+id/string_admin"
                    />
                <EditText
                    android:id="@+id/user_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="管理员"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_contacts_email"
                    android:id="@+id/string_user_email"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/user_email"
                    android:layout_toRightOf="@+id/string_user_email"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="233222@email.com"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/team_user_tel"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/user_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:numeric="integer"
                    android:maxLength="11"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:layout_marginRight="7dp"
                    android:background="@android:color/transparent"
                    android:text="1323445433"
                    />
            </RelativeLayout>
    <Button

        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/sure"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_commit_work_order_button_bg"
        android:text="@string/user_be_sure"
        android:textColor="@android:color/white"
        />


</LinearLayout>
