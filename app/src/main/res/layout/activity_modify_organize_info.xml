<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_organize_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shangchuan.com.oec.ui.user.activity.ModifyOrganizeInfoActivity">
   <include layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/theme_divide_color"
                android:paddingLeft="15dp"
                android:text="@string/user_organization"
                android:textSize="10sp"
                android:gravity="center_vertical"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/organize_full_name"
                    android:id="@+id/string_full_name"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:layout_toRightOf="@+id/string_full_name"
                    android:id="@+id/organize_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="上海商传互联网科技有限公司"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/organize_simple_name"
                android:layout_centerVertical="true"
                android:id="@+id/string_organize_simple_name"
                />
            <EditText
                android:layout_toRightOf="@+id/string_organize_simple_name"
                android:id="@+id/organize_simple_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:text="商传"
                />
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="logo"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_news_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_toLeftOf="@+id/arrow"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/user_img_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_leave_type"
                    android:layout_centerVertical="true"
                    />
              <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="10dp"
                  android:orientation="horizontal"
                  android:layout_centerVertical="true"
                  >
                  <RadioButton
                      android:id="@+id/rb_company"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="5dp"
                      android:checked="true"
                      android:background="@android:color/transparent"
                      android:button="@drawable/selector_organize_type_radiobutton"
                      android:text="@string/apply_company"
                      />
                  <RadioButton
                      android:id="@+id/rb_personal"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@android:color/transparent"
                      android:paddingLeft="5dp"
                      android:button="@drawable/selector_organize_type_radiobutton"
                      android:text="@string/apply_personal"
                      />
              </RadioGroup>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/organize_code"
                    android:layout_centerVertical="true"
                    android:id="@+id/string_code"
                    />
                <EditText
                    android:layout_toRightOf="@+id/string_code"
                    android:id="@+id/organize_code"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="123334"

                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/user_administration"
                    android:layout_centerVertical="true"
                    android:id="@+id/string_admin"
                    />
                <EditText
                    android:layout_toRightOf="@+id/string_admin"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/organize_admin_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:ellipsize="middle"
                    android:text="12233232211"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_client_simple_address"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/organize_simple_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="上海市黄浦区"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_client_address_details"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/organize_address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:maxLength="10"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:text="高雄路2号3A"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/apply_client_tel"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/organize_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:numeric="integer"
                    android:maxLength="11"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:layout_marginRight="7dp"
                    android:background="@android:color/transparent"
                    android:text="1323445433"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_divide_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/team_describe"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:text="收费我饿hi荣威恶意"
                    />




            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
