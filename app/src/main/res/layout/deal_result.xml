<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_deal_result"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_msg"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:hint="@string/apply_approve_advise"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
            <RelativeLayout
                android:id="@+id/rel_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/approve_pass"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_approve_adivse_baground_green"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/apply_approve_advise_pass_text"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_second"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/approve_turn_down"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textSize="14sp"
                    android:background="@drawable/shape_approve_adivse_baground_red"
                    android:gravity="center"
                    android:textColor="@color/apply_approve_advise_turn_down_text"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_third"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/approve_to_other"

                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_approve_adivse_baground_blue"
                    android:text="转他人处理"
                    android:gravity="center"
                    android:textColor="@color/apply_approve_advise_to_other_text"
                    android:textSize="13sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    </LinearLayout>
