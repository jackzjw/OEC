<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/first_letter"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:background="@color/theme_divide_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <shangchuan.com.oec.widget.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_avater"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_dark_text_color"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="20dp"
              android:text="管理员"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/home_text_light_green"
            android:background="@drawable/shape_user_is_admin_background"
            android:layout_gravity="center_vertical"
            android:id="@+id/is_admin"
            />
        
        
    </LinearLayout>

</LinearLayout>