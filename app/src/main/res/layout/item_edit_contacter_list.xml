<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八筒"/>
           <TextView
               android:id="@+id/user_job"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:text="营销总监：张嬷嬷"
               />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/team_icon_email"
                  android:layout_gravity="center_vertical"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_email"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="23434232@fotile.com"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/team_icon_number"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_call"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="23434233434"
                    />
            </LinearLayout>


        </LinearLayout>

       <TextView
           android:id="@+id/tv_delete"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:padding="5dp"
           android:layout_marginRight="10dp"
           android:text="删除"
           android:textSize="15sp"
           android:textColor="@color/home_text_light_green"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_modify"
        android:layout_centerVertical="true"
        android:text="修改"
        android:textSize="15sp"
        android:textColor="@color/home_text_light_green"
        android:layout_toLeftOf="@+id/tv_delete"
        android:layout_marginRight="45dp"
        android:padding="5dp"
        />




</RelativeLayout>